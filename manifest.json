{
    "manifest_version": 2,
    "name": "Console Deals to Reddit",
    "version": "0.6.2",
    "content_scripts": [{
        "matches": [
            "https://store.playstation.com/*",
            "https://www.xbox.com/*"
        ],
        "js": [
            "resources/jquery-3.2.1.min.js",
            "src/content.js"
        ]
    }],
    "page_action": {
        "default_icon": "img/icon-128x128.png",
        "default_popup": "src/popup.html"
    },
    "icons": {
        "128": "img/icon-128x128.png"
    },
    "permissions": [
        "declarativeContent"
    ],
    "background": {
        "scripts": ["src/background.js"],
        "persistent": false
    }
}